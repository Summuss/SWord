<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/overall_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"

        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:fitsSystemWindows="true"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.willy.ratingbar.RotationRatingBar
                        android:id="@+id/priority_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                        app:srb_clearRatingEnabled="true"
                        app:srb_clickable="true"
                        app:srb_isIndicator="false"
                        app:srb_minimumStars="1"
                        app:srb_numStars="5"
                        app:srb_rating="2"
                        app:srb_scrollable="true"
                        app:srb_starHeight="25dp"
                        app:srb_starPadding="8dp"
                        app:srb_starWidth="25dp"
                        app:srb_stepSize="1" />

                    <com.eugeneek.smilebar.SmileBar
                        android:id="@+id/diffulty_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="16dp"
                        app:enabled="true"
                        app:horizontalSpacing="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/priority_rating"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/priority_rating"
                        app:rating="1"
                        app:smileDefault="@drawable/ic_smile"
                        app:smileHeight="35dp"
                        app:smileRate1="@drawable/ic_happy"
                        app:smileRate2="@drawable/ic_anguished"
                        app:smileRate3="@drawable/ic_sad"
                        app:smileRate4="@drawable/ic_cry"
                        app:smileRate5="@drawable/ic_scream"
                        app:smileWidth="35dp" />

                    <EditText
                        android:id="@+id/content_tv"
                        style="@style/Widget.Design.TextInputEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="请输入单词"

                        android:inputType="textPersonName"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/guideline2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="240dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_begin="50dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优先级"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="@+id/priority_rating"
                        app:layout_constraintStart_toStartOf="@+id/priority_rating"
                        app:layout_constraintTop_toBottomOf="@+id/priority_rating"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="难度"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/guideline"
                        app:layout_constraintEnd_toEndOf="@+id/diffulty_rating"
                        app:layout_constraintHorizontal_bias="0.487"
                        app:layout_constraintStart_toStartOf="@+id/diffulty_rating"
                        app:layout_constraintTop_toBottomOf="@+id/diffulty_rating"
                        app:layout_constraintVertical_bias="0.0" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@+id/content_tv"
                        app:layout_constraintEnd_toEndOf="@+id/content_tv"
                        app:layout_constraintTop_toBottomOf="@id/content_tv"
                        tools:layout_editor_absoluteY="98dp">

                        <EditText
                            android:id="@+id/pronum_tv"
                            style="@style/Widget.Design.TextInputEditText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:hint="请输入发音"
                            android:inputType="textPersonName"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <org.angmarch.views.NiceSpinner

                            android:id="@+id/tone_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="1"
                            android:background="@android:color/transparent"
                            android:backgroundTint="@android:color/transparent"
                            android:text="音调"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            app:arrowTint="@color/colorAccent"
                            app:drawableTint="@android:color/black"
                            app:textTint="@android:color/black" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>