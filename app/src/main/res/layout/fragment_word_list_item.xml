<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/out_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_word_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="確かめる"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_word_pronun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="たしかめる"
            android:textAlignment="viewEnd"
            android:textSize="18sp" />
    </LinearLayout>

    <com.white.progressview.HorizontalProgressView
        android:id="@+id/progress_proficiency"
        app:progressTextVisible="false"
        app:progressReachSize="2dp"
        android:progress="70"
        app:progressReachColor="@color/colorPrimary"
        app:progressNormalColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>

