<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_nav_graph"
    app:startDestination="@id/baseWordListFragment">

    <fragment
        android:id="@+id/baseWordListFragment"
        android:name="top.summus.sword.fragment.BaseWordListFragment"
        android:label="fragment_base_wordlist"
        tools:layout="@layout/fragment_base_wordlist">
        <action
            android:id="@+id/action_baseWordListFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_baseWordListFragment_to_bookNodeFragment"
            app:destination="@+id/bookNodeFragment"
            app:enterAnim="@anim/fragment_enter_zoon"
            app:popExitAnim="@anim/fragment_exit_zoon" />
        <action
            android:id="@+id/action_baseWordListFragment_to_wordFragment"
            app:destination="@id/wordFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="top.summus.sword.fragment.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test">
        <argument
            android:name="name"
            android:defaultValue="test"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bookNodeFragment"
        android:name="top.summus.sword.fragment.BookNodeFragment"
        tools:layout="@layout/fragment_booknode">
        <action
            android:id="@+id/action_bookNodeFragment_to_wordFragment2"
            app:destination="@id/wordFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordFragment"
        android:name="top.summus.sword.fragment.WordFragment"
        android:label="fragment_word"
        tools:layout="@layout/fragment_word">
        <action
            android:id="@+id/action_wordFragment_to_addWordFragment"
            app:destination="@id/addWordFragment" />
    </fragment>
    <fragment
        android:id="@+id/addWordFragment"
        android:name="top.summus.sword.fragment.AddWordFragment"
        tools:layout="@layout/fragment_add_word" />
</navigation>